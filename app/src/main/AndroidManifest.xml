<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piotrekj.shopppingproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        >

        <activity
            android:name="com.example.piotrekj.shopppingproject.MainActivity"
            android:label="Shopping"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.piotrekj.shopppingproject.BasketActivity"
            android:label="Your basket"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".ProductListActivity"
            android:label="List of products"
            android:parentActivityName=".MainActivity">

        </activity>

    </application>

</manifest>
